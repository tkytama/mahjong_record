<div class="devise-wrapper">
  <div class="devise-comment">
    <h2>新規登録</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",size: :"30" %>
    </div>

    <div class="field">
      <%= f.label :name %> <br />
      <%= f.text_field :name,size: :"30" %>
    </div>


    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(最低<%= @minimum_password_length %>桁)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password",size: :"30" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password",size: :"30" %>
    </div>

    <div class="silver-button">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
